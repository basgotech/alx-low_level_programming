# Makefile for building the 'school' executable

# Compiler
CC = gcc

# Source files
SRC = main.c file1.c file2.c  # Add your source files here

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Program to delete files
RM = rm -f

# Compiler flags
CFLAGS = -Wall -g  # You can add more flags if needed

# Target: all (default target)
all: $(NAME)

# Target: school (build the executable)
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

# Rule to compile source files into object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Target: clean (delete temporary files and the executable)
clean:
	$(RM) *~* $(NAME)

# Target: oclean (delete object files)
oclean:
	$(RM) $(OBJ)

# Target: fclean (delete temporary files, the executable, and object files)
fclean: clean oclean

# Target: re (force recompilation of all source files)
re: fclean all

# Ensure that clean, oclean, fclean, and re don't fail even if the files don't exist
.PHONY: clean oclean fclean re
